<div class="navbar">

  <%= link_to home_path do %>
    <% if params[:controller] == 'pages' && params[:action] == 'home'%>
      <div class="navbar__item -blue">
        <span class="navbar__icon">
            <i class="fas fa-home"></i>
        </span>
      </div>
    <% else %>
      <div class="navbar__item -blue">
        <span class="navbar__icon">
            <i class="fas fa-home color-grey"></i>
        </span>
      </div>
    <% end %>
  <% end %>


  <%= link_to meals_path do %>
    <% if params[:controller] == 'meals' && params[:action] == 'index'%>
      <div class="navbar__item -orange">
        <span class="navbar__icon">
          <i class="fas fa-search"></i>
        </span>
      </div>
    <% else %>
      <div class="navbar__item -orange">
        <span class="navbar__icon">
          <i class="fas fa-search color-grey"></i>
        </span>
      </div>
    <% end %>
  <% end %>


  <%= link_to dashboard_path do  %>
    <% if params[:controller] == 'pages' && params[:action] == 'dashboard'%>
      <div class="navbar__item -purple">
        <span class="navbar__icon">
            <i class="fas fa-user-circle"></i>
        </span>
      </div>
    <% else %>
      <div class="navbar__item -purple">
        <span class="navbar__icon">
            <i class="fas fa-user-circle color-grey"></i>
        </span>
      </div>
    <% end %>
  <% end %>

</div>
