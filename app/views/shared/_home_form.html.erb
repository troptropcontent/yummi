<%= form_tag meals_path, method: :get do %>

<%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "What would make you feel Yummi?"
  %>

  <%= text_field_tag :day,
    params[:day],
    class: "form-control datepicker",
    placeholder: "When?"
  %>

  <center><%= submit_tag "Find it!", class: "btn btn-primary" %></center>
<% end %>
