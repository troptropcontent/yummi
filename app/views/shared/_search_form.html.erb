<%= form_tag meals_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "What would make you feel Yummi?"
  %>

  <%= text_field_tag :day,
    params[:day],
    class: "form-control datepicker",
    placeholder: "When?"
  %>

     <%= text_field_tag :home_address,
    params[:home_address],
    class: "form-control",
    placeholder: "What is your home address"
  %>

  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

