<div class= "ml-2">
  <h1> Your discussion with <%= @chatroom.order.lines.first.meal.user.first_name %> </h1>
  <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
    <% @chatroom.messages.each do |message| %>
      <% sender = @sender == message.user %>
      <div class="message<%=' sender' if sender  %>" id="message-<%= message.id %>">
        <i class="author">
          <span><%= message.user.first_name %></span>
          <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
        </i>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>
<%= console %>
  <%= simple_form_for [ @chatroom, @message ] do |f| %>
    <div class="type-zone">
      <%= f.input :content, label: false, input_html: { placeholder: "Message ##{@chatroom.name}", class: "input"}  %>
      <%= f.submit "Send", class: "send-btn" %> 
    </div>
  <% end %>
</div>
