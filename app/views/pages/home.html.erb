<div class="banner">
  <h2>Eat local food, prepared with love</h2>
  <div class="search-bar">
    <center><%= render 'shared/home_form' %></center>
  </div>
</div>

<div class="titles">
  <h3>Moment offers </h3>
  <%= link_to "See all", meals_path, id: 'link-to'  %>
</div>

<div class="card-flex">

  <ul>
    <% @meals.each do |meal| %>
    <li>
      <div class="card-suggestion-home" style="background-image: url(<%= cl_image_path meal.photo.key, height: 320, width: 300, crop: :fill %>);">
        <div class="card-suggestion-infos-home">
            <%= link_to meal_path(meal), id: 'link' do %>
              <h2 id="margin-top-home"><strong><%= meal.name %></strong></h2>
              <h2><%= meal.price_cents.fdiv(100) %>â‚¬</h2>
            <% end %>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-suggestion-user-home avatar-bordered" />
        </div>
      </div>
    </li>
    <% end %>

  </ul>
</div>

